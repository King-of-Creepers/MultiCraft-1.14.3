{
    "multipart": [
        {   "when": { "is_harvested": "true", "berry_type": "sweet_berry" },
            "apply": { "model": "multicraft:block/block_potted_sweet_berry_bush" }
        },
        {   "when": { "is_harvested": "true", "berry_type": "blue_berry" },
            "apply": { "model": "multicraft:block/block_potted_blue_berry_bush" }
        },
        {   "when": { "is_harvested": "false", "berry_type": "sweet_berry" },
            "apply": { "model": "multicraft:block/block_potted_sweet_berry_bush_grown" }
        },
        {   "when": { "is_harvested": "false", "berry_type": "blue_berry" },
            "apply": { "model": "multicraft:block/block_potted_blue_berry_bush_grown" }
        }
    ]
}
