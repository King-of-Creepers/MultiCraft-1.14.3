{
    "multipart": [
        {   "when": { "is_harvested": "true" },
            "apply": { "model": "multicraft:block/block_potted_berry" }
        },
        {   "when": { "is_harvested": "false", "berry_type": "sweet_berry" },
            "apply": { "model": "multicraft:block/block_potted_sweet_berry" }
        },
        {   "when": { "is_harvested": "false", "berry_type": "blue_berry" },
            "apply": { "model": "multicraft:block/block_potted_blue_berry" }
        }
    ]
}